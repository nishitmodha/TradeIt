<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-3 col-sm-6">
      <figure class="card card-product-grid">
        <%= link_to product do %>
        <%= image_tag(product.product_image) %>
      <% end %>
        <figcaption class="info-wrap">
          
          <%= link_to product.title, product, class:"title" %>
          <div class="mt-2">
            <var class="price"><%= product.price %></var> <!-- price-wrap.// -->
            <a href="#" class="btn btn-sm btn-outline-primary float-right">Add to cart <i class="fa fa-shopping-cart"></i></a>
          </div> <!-- action-wrap.end -->
        </figcaption>
      </figure> <!-- card // -->
    </div> <!-- col.// -->
  <% end %>
</div>